@article{harnettPhosphorycholineMoietyFilarial2008,
  title = {The Phosphorycholine Moiety of the Filarial Nematode Immunomodulator {{ES-62}} Is Responsible for Its Anti-Inflammatory Action in Arthritis},
  author = {Harnett, M. M. and Kean, D. E. and Boitelle, A. and McGuiness, S. and Thalhamer, T. and Steiger, C. N. and Egan, C. and Al-Riyami, L. and Alcocer, M. J. and Houston, K. M. and Gracie, J. A. and McInnes, I. B. and Harnett, W.},
