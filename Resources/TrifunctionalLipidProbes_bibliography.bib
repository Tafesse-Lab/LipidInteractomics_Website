@article{garveyHighcontentImagebasedMethod2016a,
  title = {A High-Content Image-Based Method for Quantitatively Studying Context-Dependent Cell Population Dynamics {{OPEN}}},
  author = {Garvey, Colleen M and Spiller, Erin and Lindsay, Danika and Chiang, Chun-Te and Choi, Nathan C and Agus, David B and Mallick, Parag and Foo, Jasmine and Mumenthaler, Shannon M},
