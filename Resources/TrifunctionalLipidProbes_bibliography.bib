@article{pachecoCRISPRScreenReveals2018a,
  title = {{{CRISPR Screen Reveals}} That {{EHEC}}’s {{T3SS}} and {{Shiga Toxin Rely}} on {{Shared Host Factors}} for {{Infection}}},
