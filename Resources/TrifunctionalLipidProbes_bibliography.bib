@article{mansourDectin1ActivationControls2013a,
  title = {Dectin-1 {{Activation Controls Maturation}} of β-1,3-{{Glucan-containing Phagosomes}}},
  author = {Mansour, Michael K. and Tam, Jenny M. and Khan, Nida S. and Seward, Michael and Davids, Peter J. and Puranam, Sravanthi and Sokolovska, Anna and Sykes, David B. and Dagher, Zeina and Becker, Christine and Tanne, Antoine and Reedy, Jennifer L. and Stuart, Lynda M. and Vyas, Jatin M.},
  date = {2013-05-31},
  journaltitle = {Journal of Biological Chemistry},
