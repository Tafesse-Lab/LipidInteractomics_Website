@article{abreuHostPathogenInteractionNovel2020,
  title = {Host-{{Pathogen Interaction}} as a {{Novel Target}} for {{Host-Directed Therapies}} in {{Tuberculosis}}},
  author = {Abreu, Rodrigo and Giri, Pramod and Quinn, Fred},
  date = {2020},
  journaltitle = {Frontiers in Immunology},
