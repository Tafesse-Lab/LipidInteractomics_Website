@article{malikCuttingEdgeMycobacterium2003a,
  title = {Cutting {{Edge}}: {{Mycobacterium}} Tuberculosis {{Blocks Ca2}}+ {{Signaling}} and {{Phagosome Maturation}} in {{Human Macrophages Via Specific Inhibition}} of {{Sphingosine Kinase}}},
  author = {Malik, Z. A. and Thompson, C. R. and Hashimi, S. and Porter, B. and Iyer, S. S. and Kusner, D. J.},
