@article{jouaultSpecificRecognitionCandida2006,
  title = {Specific {{Recognition}} of {{Candida}} Albicans by {{Macrophages Requires Galectin-3}} to {{Discriminate Saccharomyces}} Cerevisiae and {{Needs Association}} with {{TLR2}} for {{Signaling}}},
  author = {Jouault, Thierry and El Abed-El Behi, Miryam and Martínez-Esparza, María and Breuilh, Laetitia and Trinel, Pierre-André and Chamaillard, Mathias and Trottein, Francois and Poulain, Daniel},
