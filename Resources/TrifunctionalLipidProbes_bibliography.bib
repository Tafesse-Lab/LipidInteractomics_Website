@article{yangRD1LocusMycobacterium2014,
  title = {The {{RD1}} Locus in the {{Mycobacterium}} Tuberculosis Genome Contributes to the Maturation and Secretion of {{IL-1α}} from Infected Macrophages through the Elevation of Cytoplasmic Calcium Levels and Calpain Activation},
  author = {Yang, Ruili and Xi, Chen and Sita, Dewamitta R. and Sakai, Shunsuke and Tsuchiya, Kohsuke and Hara, Hideki and Shen, Yanna and Qu, Huixin and Fang, Rendong and Mitsuyama, Masao and Kawamura, Ikuo},
