  author = {Kornhuber, Johannes and Muehlbacher, Markus and Trapp, Stefan and Pechmann, Stefanie and Friedl, Astrid and Reichel, Martin and Mühle, Christiane and Terfloth, Lothar and Groemer, Teja W and Spitzer, Gudrun M and Liedl, Klaus R and Gulbins, Erich and Tripal, Philipp},
