  author = {Yang, Xinting and Yan, Jun and Xue, Yu and Sun, Qing and Zhang, Yun and Guo, Ru and Wang, Chaohong and Li, Xuelian and Liang, Qingtao and Wu, Hangyu and Wang, Chong and Liao, Xinlei and Long, Sibo and Zheng, Maike and Wei, Rongrong and Zhang, Haoran and Liu, Yi and Che, Nanying and Luu, Laurence Don Wai and Pan, Junhua and Wang, Guirong and Wang, Yi},
