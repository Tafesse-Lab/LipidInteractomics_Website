}

@article{shapiraInitiationTerminationNF2005a,
  title = {Initiation and Termination of {{NF- B}} Signaling by the Intracellular Protozoan Parasite {{Toxoplasma}} Gondii},
  author = {Shapira, S.},
  date = {2005-08-01},
  journaltitle = {Journal of Cell Science},
