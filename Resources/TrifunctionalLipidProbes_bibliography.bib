@article{salamonEvidencePostinitiationRegulation2013a,
  title = {Evidence for {{Postinitiation Regulation}} of {{mRNA Biogenesis}} in {{Tuberculosis}}},
  author = {Salamon, Hugh and Qiao, Yaming and Cheng, Jeff C. and Yamaguchi, Ken D. and Soteropoulos, Patricia and Weiden, Michael and Gennaro, Maria Laura and Pine, Richard},
