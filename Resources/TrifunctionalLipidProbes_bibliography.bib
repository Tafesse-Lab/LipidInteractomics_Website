  author = {Shen, Yanna and Kawamura, Ikuo and Nomura, Takamasa and Tsuchiya, Kohsuke and Hara, Hideki and Dewamitta, Sita R. and Sakai, Shunsuke and Qu, Huixin and Daim, Sylvia and Yamamoto, Takeshi and Mitsuyama, Masao},
  date = {2010-06},
  journaltitle = {Infection and Immunity},
