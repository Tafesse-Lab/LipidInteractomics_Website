@article{shanerQuantitativeAnalysisSphingolipids2009,
  title = {Quantitative Analysis of Sphingolipids for Lipidomics Using Triple Quadrupole and Quadrupole Linear Ion Trap Mass Spectrometers},
  author = {Shaner, Rebecca L. and Allegood, Jeremy C. and Park, Hyejung and Wang, Elaine and Kelly, Samuel and Haynes, Christopher A. and Sullards, M. Cameron and Merrill, Alfred H.},
