@article{fortuneMycobacteriumTuberculosisInhibits2004,
  title = {Mycobacterium Tuberculosis {{Inhibits Macrophage Responses}} to {{IFN-γ}} through {{Myeloid Differentiation Factor}} 88-{{Dependent}} and -{{Independent Mechanisms}}},
