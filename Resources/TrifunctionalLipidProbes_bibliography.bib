  author = {Smith, Jennifer and Manoranjan, Joanna and Pan, Miao and Bohsali, Amro and Xu, Junjie and Liu, Jun and McDonald, Kent L. and Szyk, Agnieszka and LaRonde-LeBlanc, Nicole and Gao, Lian-Yong},
