@article{simeonePhagosomalRuptureMycobacterium2012,
  title = {Phagosomal {{Rupture}} by {{Mycobacterium}} Tuberculosis {{Results}} in {{Toxicity}} and {{Host Cell Death}}},
  author = {Simeone, Roxane and Bobard, Alexandre and Lippmann, Juliane and Bitter, Wilbert and Majlessi, Laleh and Brosch, Roland and Enninga, Jost},
