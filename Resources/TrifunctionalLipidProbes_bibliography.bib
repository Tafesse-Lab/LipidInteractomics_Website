@article{sanderDetectionProkaryoticMRNA2011a,
  title = {Detection of Prokaryotic {{mRNA}} Signifies Microbial Viability and Promotes Immunity},
  author = {Sander, Leif E and Davis, Michael J and Boekschoten, Mark V and Amsen, Derk and Dascher, Christopher C and Ryffel, Bernard and Swanson, Joel A and Müller, Michael and Blander, J. Magarian},
