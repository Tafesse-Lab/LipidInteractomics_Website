@article{seguiPhosphatidylinositolTransferProtein2002,
  title = {Phosphatidylinositol Transfer Protein β Displays Minimal Sphingomyelin Transfer Activity and Is Not Required for Biosynthesis and Trafficking of Sphingomyelin},
  author = {Ségui, Bruno and Allen-Baume, Victoria and Cockcroft, Shamshad},
