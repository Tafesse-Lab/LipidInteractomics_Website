@article{douganMicrosomalTriglycerideTransfer2005,
  title = {Microsomal Triglyceride Transfer Protein Lipidation and Control of {{CD1d}} on Antigen-Presenting Cells},
  author = {Dougan, Stephanie K. and Salas, Azucena and Rava, Paul and Agyemang, Amma and Kaser, Arthur and Morrison, Jamin and Khurana, Archana and Kronenberg, Mitchell and Johnson, Caroline and Exley, Mark and Hussain, M. Mahmood and Blumberg, Richard S.},
