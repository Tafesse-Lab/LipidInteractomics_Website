@article{yangExpressionDistributionHIF1a2015a,
  title = {Expression and Distribution of {{HIF-1α}}, {{HIF-2α}}, {{VEGF}}, {{VEGFR-2}} and {{HIMF}} in the Kidneys of {{Tibetan}} Sheep, {{Plain}} Sheep and Goat},
