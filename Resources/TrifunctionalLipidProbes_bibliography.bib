@article{marshallRestrictedAccumulationPhosphatidylinositol2001,
  title = {Restricted {{Accumulation}} of {{Phosphatidylinositol}} 3-{{Kinase Products}} in a {{Plasmalemmal Subdomain}} during {{Fcγ Receptor-Mediated Phagocytosis}}},
  author = {Marshall, John G. and Booth, James W. and Stambolic, Vuk and Mak, Tak and Balla, Tamas and Schreiber, Alan D. and Meyer, Tobias and Grinstein, Sergio},
