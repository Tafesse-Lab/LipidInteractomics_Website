@article{schnappingerTranscriptionalAdaptationMycobacterium2003,
  title = {Transcriptional {{Adaptation}} of {{{\mkbibemph{Mycobacterium}}}}{\mkbibemph{ Tuberculosis}} within {{Macrophages}}},
